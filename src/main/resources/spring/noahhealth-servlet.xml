<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!--<bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping"/>-->

    <!-- 定义注解驱动 -->
    <mvc:annotation-driven/>

    <!--定义拦截器-->
    <mvc:interceptors>

        <!-- 当设置多个拦截器时，先按顺序调用preHandle方法，然后逆序调用每个拦截器的postHandle和afterCompletion方法 -->
        <!--一定要把token的拦截器设置在权限校验的前面，因为token校验通过后会在request的session中放入此用户具有的role，才能在下一步进行比对-->

        <!--token认证拦截器-->
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <mvc:exclude-mapping path="/auth/login"/>
            <mvc:exclude-mapping path="/auth/member/login"/>
            <mvc:exclude-mapping path="/auth/employee/login"/>
            <mvc:exclude-mapping path="/auth/register"/>
            <mvc:exclude-mapping path="/auth/send_sms"/>
            <mvc:exclude-mapping path="/auth/login_denied"/>
            <mvc:exclude-mapping path="/auth/role_denied"/>
            <bean class="com.noahhealth.interceptor.TokenCertifyInterceptor"/>
        </mvc:interceptor>

        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <!-- 如果不定义 mvc:mapping path 将拦截所有的URL请求 -->
            <bean class="com.noahhealth.bean.rolecheck.RoleCheckInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <!-- 定义Controller的扫描包 -->
    <context:component-scan base-package="com.noahhealth.controller"/>

    <!-- 定义文件上传解析器 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!-- 设定默认编码 -->
        <property name="defaultEncoding" value="UTF-8"/>
        <!-- 设定文件上传的最大值50MB，50*1024*1024 -->
        <property name="maxUploadSize" value="52428800"/>
    </bean>

</beans>
